{
  "name": "eden-maintenance",
  "version": "1.0.0",
  "description": "Comprehensive maintenance management system with WhatsApp integration",
  "main": "server/index.js",
  "scripts": {
    "dev:server": "nodemon server/index.js",
    "dev:client": "cd client && npm run dev",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "install:all": "npm install && cd client && npm install"
  },
  "keywords": [
    "maintenance",
    "management",
    "tasks",
    "whatsapp",
    "facilities",
    "hebrew",
    "rtl"
  ],
  "author": "Eden Team",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "axios": "^1.13.2",
    "better-sqlite3": "^12.6.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "express": "^5.2.1",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "qrcode-terminal": "^0.12.0",
    "socket.io": "^4.8.3",
    "whatsapp-web.js": "^1.34.4"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11"
  }
}
